<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/class_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_height="@dimen/height_classes_recycler_view">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/class_image_view"
            android:layout_width="@dimen/width_class_image_view"
            android:layout_height="@dimen/height_class_image_view"
            android:layout_marginStart="@dimen/margin_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/history" />

        <TextView
            android:id="@+id/class_text_view"
            style="@style/BodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            app:layout_constraintStart_toEndOf="@id/class_image_view"
            app:layout_constraintTop_toTopOf="@id/class_image_view"
            tools:text="History" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/time_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_large"
            android:tint="@color/gray_light"
            app:layout_constraintBottom_toBottomOf="@id/time_text_view"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toEndOf="@id/class_image_view"
            app:layout_constraintTop_toTopOf="@id/time_text_view"
            app:srcCompat="@drawable/baseline_access_time_24" />

        <TextView
            android:id="@+id/time_text_view"
            style="@style/NoteTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            app:layout_constraintTop_toBottomOf="@id/class_text_view"
            app:layout_constraintStart_toEndOf="@id/time_image_view"
            tools:text="8:00-8:45" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/video_layout"
            android:layout_width="@dimen/width_video_layout"
            android:layout_height="match_parent"
            android:background="@color/blue_light"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent">

            <com.gb.schooldiary.utils.VerticalTextView
                android:id="@+id/video_text_view"
                style="@style/NoteTextStyle"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_video_text_view"
                android:text="@string/video_open"
                app:layout_constraintStart_toStartOf="@id/video_image_view"
                app:layout_constraintEnd_toEndOf="@id/video_image_view"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/video_image_view"
                app:layout_constraintVertical_chainStyle="packed"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/margin_small"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/video_image_view"
                android:layout_width="@dimen/width_video_image_view"
                android:layout_height="@dimen/height_video_image_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/video_text_view"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/video"
                android:rotation="90"
                android:tint="@color/white"
                android:layout_marginTop="@dimen/margin_small"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>