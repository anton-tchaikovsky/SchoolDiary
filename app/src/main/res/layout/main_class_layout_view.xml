<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_base_class_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_marginStart="@dimen/margin_large"
    android:layout_marginEnd="@dimen/margin_large">
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/circle_large_image_view"
        android:layout_width="@dimen/width_circle_large"
        android:layout_height="@dimen/height_circle_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle"
        android:tint="@color/green_blue"
        android:visibility="invisible"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/line_image_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:srcCompat="@drawable/line"
        app:layout_constraintStart_toStartOf="@id/circle_small_image_view"
        app:layout_constraintEnd_toEndOf="@id/circle_small_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/circle_small_image_view"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:srcCompat="@drawable/line"
        app:layout_constraintStart_toStartOf="@id/circle_small_image_view"
        app:layout_constraintEnd_toEndOf="@id/circle_small_image_view"
        app:layout_constraintTop_toBottomOf="@+id/circle_small_image_view"
        app:layout_constraintBottom_toBottomOf="parent"
       />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/circle_small_image_view"
        android:layout_width="@dimen/width_circle_small"
        android:layout_height="@dimen/height_circle_small"
        app:layout_constraintStart_toStartOf="@id/circle_large_image_view"
        app:layout_constraintTop_toTopOf="@id/circle_large_image_view"
        app:layout_constraintEnd_toEndOf="@id/circle_large_image_view"
        app:layout_constraintBottom_toBottomOf="@id/circle_large_image_view"
        app:srcCompat="@drawable/circle"
        android:tint="@color/white"/>

    <TextView
        android:id="@+id/time_text_view"
        style="@style/TimeTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="08:00 - 08:45"
        app:layout_constraintStart_toEndOf="@id/circle_large_image_view"
        app:layout_constraintTop_toTopOf="@id/circle_large_image_view"
        app:layout_constraintBottom_toBottomOf="@id/circle_large_image_view"
        android:layout_marginStart="@dimen/margin_medium"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/class_card_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_base_class_card_view"
        app:layout_constraintStart_toStartOf="@id/time_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_large"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/class_image_view"
                android:layout_width="@dimen/width_class_image_view"
                android:layout_height="@dimen/height_class_image_view"
                android:layout_marginStart="@dimen/margin_large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/history" />

            <TextView
                android:id="@+id/class_text_view"
                style="@style/BodyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_large"
                app:layout_constraintStart_toEndOf="@id/class_image_view"
                app:layout_constraintTop_toTopOf="@id/class_image_view"
                tools:text="History" />

            <TextView
                android:id="@+id/teacher_text_view"
                style="@style/NoteTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/class_image_view"
                app:layout_constraintStart_toStartOf="@id/class_text_view"
                tools:text="Teacher: Mrs. Barros" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/video_layout"
                android:layout_width="@dimen/width_video_layout"
                android:layout_height="match_parent"
                android:background="@color/blue_light"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent">

                <com.gb.schooldiary.utils.VerticalTextView
                    android:id="@+id/video_text_view"
                    style="@style/NoteTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_video_text_view"
                    android:text="@string/video_open"
                    app:layout_constraintStart_toStartOf="@id/video_image_view"
                    app:layout_constraintEnd_toEndOf="@id/video_image_view"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/video_image_view"
                    app:layout_constraintVertical_chainStyle="packed"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/margin_small"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/video_image_view"
                    android:layout_width="@dimen/width_video_image_view"
                    android:layout_height="@dimen/height_video_image_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/video_text_view"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/video"
                    android:rotation="90"
                    android:tint="@color/white"
                    android:layout_marginTop="@dimen/margin_small"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>