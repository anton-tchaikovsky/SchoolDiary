<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_additional_class_layout"
    android:layout_marginStart="@dimen/margin_large"
    android:layout_marginEnd="@dimen/margin_large"
    android:background="@color/black">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/circle_large_image_view"
        android:layout_width="@dimen/width_circle_large"
        android:layout_height="@dimen/height_circle_large"
        android:tint="@color/green_blue"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="@id/circle_small_image_view"
        app:layout_constraintStart_toStartOf="@id/circle_small_image_view"
        app:srcCompat="@drawable/line" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/circle_small_image_view"
        android:layout_width="@dimen/width_circle_small"
        android:layout_height="@dimen/height_circle_small"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/circle_large_image_view"
        app:layout_constraintEnd_toEndOf="@id/circle_large_image_view"
        app:layout_constraintStart_toStartOf="@id/circle_large_image_view"
        app:layout_constraintTop_toTopOf="@id/circle_large_image_view"
        app:srcCompat="@drawable/circle" />

    <TextView
        android:id="@+id/time_text_view"
        style="@style/TimeTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        app:layout_constraintBottom_toBottomOf="@id/circle_large_image_view"
        app:layout_constraintStart_toEndOf="@id/circle_large_image_view"
        app:layout_constraintTop_toTopOf="@id/circle_large_image_view"
        tools:text="08:00 - 08:45" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/class_card_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_additional_class_card_view"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/time_text_view"
        app:layout_constraintTop_toBottomOf="@id/time_text_view">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/class_image_view"
                android:layout_width="@dimen/width_class_image_view"
                android:layout_height="@dimen/height_class_image_view"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/physical_education" />

            <TextView
                android:id="@+id/class_text_view"
                style="@style/BodyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_large"
                app:layout_constraintStart_toEndOf="@id/class_image_view"
                app:layout_constraintTop_toTopOf="@id/class_image_view"
                tools:text="Physical Education" />

            <TextView
                android:id="@+id/teacher_text_view"
                style="@style/NoteTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/class_image_view"
                app:layout_constraintStart_toStartOf="@id/class_text_view"
                tools:text="Teacher: Mrs. Barros"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/description_text_view"
                style="@style/TimeTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_small"
                android:textAlignment="viewStart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/teacher_text_view"
                app:layout_constraintBottom_toTopOf="@id/sport_one_image_view"
                tools:text="Intensive preparation for the Junior World Champion Sheep is Los Angeles" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/sport_one_image_view"
                android:layout_width="@dimen/width_avatar_image_view_small"
                android:layout_height="@dimen/height_avatar_image_view_small"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/basketball" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/circle_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_circle"
                app:layout_constraintBottom_toBottomOf="@id/sport_one_image_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/sport_one_image_view"
                app:srcCompat="@drawable/circle"
                android:tint="@color/green_blue_first"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/sport_two_image_view"
                android:layout_width="@dimen/width_avatar_image_view_small"
                android:layout_height="@dimen/height_avatar_image_view_small"
                app:layout_constraintBottom_toBottomOf="@id/circle_image_view"
                app:layout_constraintEnd_toEndOf="@id/circle_image_view"
                app:layout_constraintStart_toStartOf="@id/circle_image_view"
                app:layout_constraintTop_toTopOf="@id/circle_image_view"
                app:srcCompat="@drawable/football" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/circle_two_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_circle_two"
                app:layout_constraintBottom_toBottomOf="@id/sport_one_image_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/sport_one_image_view"
                app:srcCompat="@drawable/circle"
                android:tint="@color/green_blue_second"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/sport_three_image_view"
                android:layout_width="@dimen/width_avatar_image_view_small"
                android:layout_height="@dimen/height_avatar_image_view_small"
                app:layout_constraintBottom_toBottomOf="@id/circle_two_image_view"
                app:layout_constraintEnd_toEndOf="@id/circle_two_image_view"
                app:layout_constraintStart_toStartOf="@id/circle_two_image_view"
                app:layout_constraintTop_toTopOf="@id/circle_two_image_view"
                app:srcCompat="@drawable/volleyball" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>