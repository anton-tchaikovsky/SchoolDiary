<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clickable="true"
    android:focusable="true"
    tools:context=".presentation.home.HomeFragment">

    <TextView
        android:id="@+id/hello_text_view"
        style="@style/TitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:text="@string/hello"
        app:layout_constraintBottom_toBottomOf="@id/avatar_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/avatar_image_view" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/avatar_image_view"
        android:layout_width="@dimen/width_avatar_image_view"
        android:layout_height="@dimen/height_avatar_image_view"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/setting_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_large"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/avatar_image_view"
        app:layout_constraintEnd_toStartOf="@id/avatar_image_view"
        app:layout_constraintTop_toTopOf="@id/avatar_image_view"
        app:srcCompat="@drawable/baseline_settings_24" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/search_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_large"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/avatar_image_view"
        app:layout_constraintEnd_toStartOf="@id/setting_image_view"
        app:layout_constraintTop_toTopOf="@id/avatar_image_view"
        app:srcCompat="@drawable/baseline_search_24" />

    <include
        layout="@layout/exam_card_view"
        android:id="@+id/exam_card_view"/>

    <TextView
        android:id="@+id/classes_text_view"
        style="@style/BodyTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/classes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/classes_recycle_view"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_medium"
        />

    <TextView
        android:id="@+id/number_classes_text_view"
        style="@style/NoteTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="6 classes today"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/classes_recycle_view"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_medium"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/classes_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_classes_recycler_view"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@id/homework_text_view"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_large"
        />

    <TextView
        android:id="@+id/homework_text_view"
        style="@style/BodyTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/homework"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/homework_recycle_view"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_medium"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homework_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_homework_recycler_view"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_large"
        />

</androidx.constraintlayout.widget.ConstraintLayout>