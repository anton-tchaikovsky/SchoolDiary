<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/black"
    tools:context=".presentation.classes.ClassesFragment">

    <TextView
        android:id="@+id/classes_text_view"
        style="@style/TitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:text="@string/classes"
        app:layout_constraintBottom_toBottomOf="@id/avatar_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/avatar_image_view" />

    <TextView
        android:id="@+id/today_text_view"
        style="@style/NoteTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Today, 1 June"
        app:layout_constraintStart_toStartOf="@id/classes_text_view"
        app:layout_constraintTop_toBottomOf="@id/classes_text_view"  />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/avatar_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/white"
        app:srcCompat="@drawable/baseline_crop_square_24" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/list_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_large"
        android:tint="@color/green_blue"
        app:layout_constraintBottom_toBottomOf="@id/avatar_image_view"
        app:layout_constraintEnd_toStartOf="@id/avatar_image_view"
        app:layout_constraintTop_toTopOf="@id/avatar_image_view"
        app:srcCompat="@drawable/baseline_format_list_bulleted_24" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/search_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_large"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/avatar_image_view"
        app:layout_constraintEnd_toStartOf="@id/list_image_view"
        app:layout_constraintTop_toTopOf="@id/avatar_image_view"
        app:srcCompat="@drawable/baseline_search_24" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/classes_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/today_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/margin_large"/>


</androidx.constraintlayout.widget.ConstraintLayout>