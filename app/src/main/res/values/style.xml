<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainCardViewStyle" parent="@style/Widget.Material3.CardView.Elevated">
    <item name="cardCornerRadius">16dp</item>
    </style>

    <style name="MenuCardViewStyle" parent="@style/MainCardViewStyle">
        <item name="cardBackgroundColor">@color/green_blue_alpha</item>
    </style>

    <style name="ExamTimeCardViewStyle" parent="@style/MainCardViewStyle">
        <item name="cardBackgroundColor">@color/black_alpha</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="MenuTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/green_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="InfoTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BodyTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NoteTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="TimeTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="verticalTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
    </style>

</resources>